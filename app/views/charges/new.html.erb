<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Register your credit card</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Register Credit Card"
          data-amount="0"
          data-locale="auto">
  </script>
<% end %>